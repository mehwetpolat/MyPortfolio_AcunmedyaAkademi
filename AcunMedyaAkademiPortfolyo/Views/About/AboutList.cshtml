@model List<AcunMedyaAkademiPortfolyo.Models.TblAbout>
@{
    ViewBag.Title = "AboutList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hakkımda Sayfası</h2>

<table class="table table-bordered">
    <tr>
        <th>Hakkımda ID</th>
        <th>Unvan</th>
        <th>Açıklama</th>
        <th>Resim Yolu</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td> @item.AboutID</td>
            <td> @item.Title</td>
            <td> @item.Description</td>
            <td><img src="@item.ImageUrl" class="img-fluid" style="width:100px; height:70px" /></td>
            <td> <a href="/About/DeleteAbout/@item.AboutID" class="btn-danger">Sil</a></td>
            <td> <a href="/About/UpdateAbout/@item.AboutID" class="btn-success">Güncelle</a></td>
        </tr>
    }

</table>

<a href="/About/CreateAbout" class="btn btn-primary">Hakkımda Girişi</a>