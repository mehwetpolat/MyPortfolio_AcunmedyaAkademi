@model List<AcunMedyaAkademiPortfolyo.Models.TblCategory>
@{
    ViewBag.Title = "CategoryController";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2> Kategori Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th> Kategori ID </th>
        <th> Kategori Adı </th>
        <th> Sil </th>
        <th> Güncelle </th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td> @item.CategoryID</td>
    <td> @item.CategoryName</td>
    <td> <a href="#" class="btn-danger"> Sil </a></td>
    <td> <a href="#" class="btn-success"> Güncelle </a></td>
</tr>}

</table>

    <a href="#" class="btn btn-primary"> Kategori Girişi</a>