@model List<AcunMedyaAkademiPortfolyo.Models.TblProject>

@{ ViewBag.Title = "ProjectList";
                Layout = "~/Views/AdminLayout/Index.cshtml"; }

<h2>Proje Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>Proje ID</th>
        <th>Proje Açıklaması</th>
        <th>Proje Resmi</th>
        <th>Proje Kategorisi</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td> @item.ProjectID</td>
    <td> @item.ProjectDescription</td>
    <td><img src="@item.ImageUrl" class="img-fluid" style="width:200px; height:150px" /> </td>
    <td> @item.TblCategory.CategoryName</td>
    <td> <a href="~/Project/DeleteProject/@item.ProjectID" class="btn-danger">Sil</a></td>
    <td> <a href="/Project/UpdateProject/@item.ProjectID" asp-route-id="@item.ProjectID" class="btn-success">Güncelle</a></td>
</tr>}

</table>

<a href="~/Project/CreateProject" class="btn btn-primary"> Yeni Proje Girişi</a> 