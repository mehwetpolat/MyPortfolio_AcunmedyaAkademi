@model List<AcunMedyaAkademiPortfolyo.Models.TblService>
@{
    ViewBag.Title = "ServiceList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hizmetlerim Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>Servis ID</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Resim</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServiceID</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><img src="@item.İmageUrl" class="img-fluid" style="width:50px; height:50px" /></td>
            <td><a href="/Service/DeleteService/@item.ServiceID" class="btn-danger">Sil</a></td>
            <td><a href="/Service/UpdateService/@item.ServiceID" class="btn-success">Güncelle</a></td>
        </tr>
    }
</table>

<a href="/Service/CreateService" class="btn btn-primary">Hizmet Girişi</a>
