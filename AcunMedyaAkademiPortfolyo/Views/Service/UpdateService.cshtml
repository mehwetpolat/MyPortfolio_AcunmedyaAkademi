@model AcunMedyaAkademiPortfolyo.Models.TblService
@{
    ViewBag.Title = "UpdateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hizmeti Güncelle</h2>

<form method="post">
    <label>Servis ID</label>
    <input type="text" class="table table-bordered" value="@Model.ServiceID" name="ServiceID" readonly/>
    <br />
    <label>Başlık</label>
    @Html.TextBoxFor(x => x.Title, new {@class = "table table-bordered" })
    <br />
    <label>Açıklama</label>
    @Html.TextBoxFor(x => x.Description, new {@class = "table table-bordered"})
    <br />
    <label>Resim Yolu</label>
    @Html.TextBoxFor(x => x.İmageUrl, new {@class = "table table-bordered"})
    <button class="btn btn-success">Servisi Güncelle</button>
</form>