@model List<AcunMedyaAkademiPortfolyo.Models.TblTestimonial>
@{
    ViewBag.Title = "TestimonialList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Referans Listem</h2>


<table class="table table-bordered">
    <tr>
        <th>Referans ID</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>İsim Soyisim</th>
        <th>Resim</th>
        <th>Meslek</th>
        <th>Statüsü</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TestimonialID</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.NameSurname</td>
            <td><img src="@item.ImageUrl" class="img-fluid" style="width:50px; height:50px" /> </td>
            <td>@item.Job</td>
            <td>@item.Status</td>
            <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn-danger">Sil</a></td>
            <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn-success">Güncelle</a></td>
        </tr>
    }
</table>

<a href="/Testimonial/CreateTestimonial" class="btn btn-primary">Referans Girişi</a>
